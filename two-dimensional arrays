С клавиатуры вводится строка.
a. Заменить все вхождения подстроки «я» на подстроку «ты». */

#include <iostream>
#include <string>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    string s;
    cout <<"\nСтрока = ";
    getline(cin, s);
    cin.sync();
    for (int i=0; i <= s.length(); i++)
    {
        if (s[i] == 'I')
            s = s.replace(i, 1, "YOU");
    }
    cout <<"\nОтвет = " << s <<endl;
    return 0;
}
